<%= form_with model: [:web, @music], local: true do |form| %>
  <% if @music.errors.any? %>
    <div class="rounded-md bg-red-50 border border-red-200 p-4 mb-6">
      <h2 class="text-sm font-medium text-red-800 mb-3"><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h2>
      <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
        <% @music.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow border border-gray-100 p-6 mb-6">
    <div class="space-y-4">
      <div>
        <%= form.label :title, t(:title), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
      </div>

      <div>
        <%= form.label :composer, t(:composer), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.text_field :composer, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
      </div>

      <div>
        <%= form.label :style, t(:style), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.text_field :style, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
      </div>

      <div>
        <%= form.label :arranger, t(:arranger), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.text_field :arranger, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
      </div>

      <div>
        <%= form.label :category, t(:category), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.text_field :category, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
      </div>
    </div>
  </div>

  <div class="flex gap-3">
    <%= form.submit t('.submit', default: 'Save Music'), class: 'flex-1 bg-indigo-600 text-white px-4 py-3 rounded-lg hover:bg-indigo-700 font-medium transition' %>
    <%= link_to t('.back', default: 'Back'), web_musics_path, class: 'flex-1 bg-gray-200 text-gray-900 px-4 py-3 rounded-lg hover:bg-gray-300 font-medium text-center transition' %>
  </div>
<% end %>
