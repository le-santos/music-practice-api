<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title', default: 'Musics') %></h1>
    <%= link_to t('.add_new', default: '+ Add Music'), new_web_music_path, class: 'bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 font-medium transition' %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @musics.each do |music| %>
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6 hover:shadow-md transition">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= music.title %></h3>
        <div class="space-y-2 mb-4">
          <p class="text-gray-700"><span class="font-medium text-gray-600">Composer:</span> <%= music.composer %></p>
          <p class="text-gray-700"><span class="font-medium text-gray-600">Style:</span> <%= music.style %></p>
          <p class="text-gray-700"><span class="font-medium text-gray-600">Arranger:</span> <%= music.arranger.presence || '-' %></p>
          <p class="text-gray-700">
            <span class="font-medium text-gray-600">Status:</span>
            <span class="text-xs font-medium px-2 py-1 rounded-full <%= status_badge_classes(music.status) %>">
              <%= music.status %>
            </span>
          </p>
        </div>
        <div class="flex gap-2">
          <%= link_to t('.show', default: 'View'), web_music_path(music), class: 'flex-1 bg-blue-100 text-blue-700 px-3 py-2 rounded hover:bg-blue-200 font-medium text-center transition text-sm' %>
          <%= link_to t('.edit', default: 'Edit'), edit_web_music_path(music), class: 'flex-1 bg-amber-100 text-amber-700 px-3 py-2 rounded hover:bg-amber-200 font-medium text-center transition text-sm' %>
          <%= link_to t('.delete', default: 'Delete'), web_music_path(music), method: :delete, data: { confirm: 'Are you sure?' }, class: 'flex-1 bg-red-100 text-red-700 px-3 py-2 rounded hover:bg-red-200 font-medium text-center transition text-sm' %>
        </div>
      </div>
    <% end %>
  </div>
</div>