<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title', default: 'Practice Sessions') %></h1>
    <%= link_to t('.add_new', default: '+ New Practice Session'), new_web_practice_session_path, class: 'bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 font-medium transition' %>
  </div>

  <div class="grid grid-cols-1 gap-4">
    <% @practice_sessions.each do |practice_session| %>
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6 hover:shadow-md transition">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <h3 class="text-lg font-bold text-gray-900"><%= practice_session.music.title %></h3>
            <p class="text-gray-600 text-sm mt-1"><%= practice_session.goals %></p>
          </div>
          <span class="text-xs font-medium px-3 py-1 rounded-full <%= case practice_session.status when 'pending' then 'bg-yellow-100 text-yellow-800' when 'planned' then 'bg-blue-100 text-blue-800' when 'completed' then 'bg-green-100 text-green-800' else 'bg-gray-100 text-gray-800' end %>">
            <%= practice_session.status %>
          </span>
        </div>
        <div class="flex gap-2">
          <%= link_to t('.show', default: 'View'), web_practice_session_path(practice_session), class: 'flex-1 bg-blue-100 text-blue-700 px-3 py-2 rounded hover:bg-blue-200 font-medium text-center transition text-sm' %>
          <%= link_to t('.edit', default: 'Edit'), edit_web_practice_session_path(practice_session), class: 'flex-1 bg-amber-100 text-amber-700 px-3 py-2 rounded hover:bg-amber-200 font-medium text-center transition text-sm' %>
          <%= link_to t('.delete', default: 'Delete'), web_practice_session_path(practice_session), method: :delete, data: { confirm: 'Are you sure?' }, class: 'flex-1 bg-red-100 text-red-700 px-3 py-2 rounded hover:bg-red-200 font-medium text-center transition text-sm' %>
        </div>
      </div>
    <% end %>
  </div>
</div>