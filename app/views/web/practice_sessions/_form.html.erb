<%= form_with model: [:web, @practice_session], local: true do |form| %>
  <% if @practice_session.errors.any? %>
    <div class="rounded-md bg-red-50 border border-red-200 p-4 mb-6">
      <h2 class="text-sm font-medium text-red-800 mb-3"><%= pluralize(@practice_session.errors.count, "error") %> prohibited this practice session from being saved:</h2>
      <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
        <% @practice_session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow border border-gray-100 p-6 mb-6">
    <div class="space-y-4">
      <div>
        <%= form.label :music_id, t(:music), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <% if @practice_session.persisted? %>
          <div class="px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-700">
            <strong><%= @practice_session.music.title %></strong>
          </div>
        <% else %>
          <%= form.select :music_id, @musics, { include_blank: 'Select a music' }, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
        <% end %>
      </div>

      <div>
        <%= form.label :goals, t(:goals), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.text_area :goals, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500', rows: 4 %>
      </div>

      <div>
        <%= form.label :status, t(:status), class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= form.select :status, PracticeSession.statuses.keys.map { |s| [s.titleize, s] }, {}, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
      </div>
    </div>
  </div>

  <div class="flex gap-3">
    <%= form.submit t('.submit', default: 'Save Session'), class: 'flex-1 bg-indigo-600 text-white px-4 py-3 rounded-lg hover:bg-indigo-700 font-medium transition' %>
    <%= link_to t('.back', default: 'Back'), web_practice_sessions_path, class: 'flex-1 bg-gray-200 text-gray-900 px-4 py-3 rounded-lg hover:bg-gray-300 font-medium text-center transition' %>
  </div>
<% end %>
